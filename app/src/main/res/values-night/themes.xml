<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tanahku" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/birutana2</item>
        <item name="colorPrimaryVariant">@color/birutanah</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/kuningtanah</item>
        <item name="colorSecondaryVariant">@color/kuningtanah</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="bgtextkomeninput">
        <item name="backgroundColor">@color/black</item>
    </style>
    <style name="btbg">
        <item name="backgroundTint">@color/birutanah</item>
    </style>
    <style name="mainbg">
        <item name="backgroundColor">@color/birutanah</item>
    </style>
    <style name="maintext">
        <item name="android:textColor">@color/white</item>
